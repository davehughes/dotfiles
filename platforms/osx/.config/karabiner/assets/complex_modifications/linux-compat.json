                {"conditions": [{"type": "frontmost_application_if", "bundle_identifiers": ["^com\\.google\\.Chrome"]}], "from": {"modifiers": {"mandatory": ["left_control"], "optional": []}, "key_code": "z"}, "to": [{"modifiers": ["left_command"], "key_code": "z"}], "type": "basic"}
            ]
        }, {
            "description": "TotalSpaces vim bindings remapping (requires using Cmd+Shift as leader in TotalSpaces hotkeys)",
            "manipulators": [
                { 
                    "from": {"modifiers": {"mandatory": ["left_control", "left_command"], "optional": ["any"]}, "key_code": "h"},
                    "to": [{"modifiers": ["left_command", "shift"], "key_code": "h"}],
                    "type": "basic"
                },
                { 
                    "from": {"modifiers": {"mandatory": ["left_control", "left_command"], "optional": ["any"]}, "key_code": "j"},
                    "to": [{"modifiers": ["left_command", "shift"], "key_code": "j"}],
                    "type": "basic"
                },
                { 
                    "from": {"modifiers": {"mandatory": ["left_control", "left_command"], "optional": ["any"]}, "key_code": "k"},
                    "to": [{"modifiers": ["left_command", "shift"], "key_code": "k"}],
                    "type": "basic"
                },
                { 
                    "from": {"modifiers": {"mandatory": ["left_control", "left_command"], "optional": ["any"]}, "key_code": "l"},
                    "to": [{"modifiers": ["left_command", "shift"], "key_code": "l"}],
                    "type": "basic"
                },
                { 
                    "from": {"modifiers": {"mandatory": ["left_control", "left_command", "left_option"], "optional": ["any"]}, "key_code": "h"},
                    "to": [{"modifiers": ["left_command", "left_option", "shift"], "key_code": "h"}],
                    "type": "basic"
                },
                { 
                    "from": {"modifiers": {"mandatory": ["left_control", "left_command", "left_option"], "optional": ["any"]}, "key_code": "j"},
                    "to": [{"modifiers": ["left_command", "left_option", "shift"], "key_code": "j"}],
                    "type": "basic"
                },
                { 
                    "from": {"modifiers": {"mandatory": ["left_control", "left_command", "left_option"], "optional": ["any"]}, "key_code": "k"},
                    "to": [{"modifiers": ["left_command", "left_option", "shift"], "key_code": "k"}],
                    "type": "basic"
                },
                { 
                    "from": {"modifiers": {"mandatory": ["left_control", "left_command", "left_option"], "optional": ["any"]}, "key_code": "l"},
                    "to": [{"modifiers": ["left_command", "left_option", "shift"], "key_code": "l"}],
                    "type": "basic"
                }
            ]
        }, {
            "description": "Caps lock to F4 (Tmux Leader)",
            "manipulators": [
                { 
                    "from": {"modifiers": {"optional": ["any"]}, "key_code": "caps_lock"},
                    "to": [{"modifiers": [], "key_code": "f4"}],
                    "type": "basic"
                }
            ]
        }, {
            "description": "Fn -> Ctrl for more PC-like keyboard",
            "manipulators": [
                { 
                    "from": {"modifiers": {"optional": ["any"]}, "key_code": "fn"},
                    "to": [{"modifiers": [], "key_code": "left_control"}],
                    "type": "basic"
                }
            ]
        }
    ]
}
