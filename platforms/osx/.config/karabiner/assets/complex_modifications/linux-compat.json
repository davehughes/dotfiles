                {"conditions": [{"type": "frontmost_application_if", "bundle_identifiers": ["^com\\.google\\.Chrome"]}], "from": {"modifiers": {"mandatory": ["left_control"], "optional": []}, "key_code": "m"}, "to": [{"modifiers": ["left_command"], "key_code": "m"}], "type": "basic"},
